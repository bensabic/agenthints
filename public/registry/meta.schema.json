{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hint Metadata Schema",
  "description": "Schema for individual hint metadata in the Agent Hints registry",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Path to this schema file"
    },
    "name": {
      "type": "string",
      "description": "Display name of the hint",
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "description": "Short description of the hint",
      "maxLength": 100
    },
    "version": {
      "type": "integer",
      "description": "Version of the hint",
      "minimum": 1
    },
    "submitter": {
      "type": "string",
      "description": "GitHub username of the submitter"
    },
    "category": {
      "type": "string",
      "enum": [
        "code-quality",
        "database",
        "framework",
        "api",
        "auth",
        "ui",
        "testing",
        "utils",
        "other"
      ],
      "description": "Hint category for filtering/search"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Searchable tags",
      "minItems": 1,
      "maxItems": 10,
      "uniqueItems": true
    },
    "hint": {
      "type": "string",
      "description": "Relative path to the hint markdown file",
      "pattern": "^\\./.*\\.md$"
    }
  },
  "required": ["name", "description", "version", "category", "tags", "hint"],
  "additionalProperties": false
}
